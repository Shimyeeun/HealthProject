   <select id="selectAllTrainersList" resultMap="trainersResult"   >
    <![CDATA[
      SELECT mgr_id,name,image_name,gender,intro
      from trainer	
    ]]>
  </select>
  
  <insert id="insertTrainer"  parameterType="trainerVO">
		<![CDATA[
		 insert into TRAINER(MGR_ID, MGR_PW, NAME, ADDRESS, IMAGE_NAME, GENDER, INTRO)
		 values(#{mgr_id}, #{mgr_pw}, #{name}, #{address}, #{image_name}, #{gender}, #{intro})
		]]>      
 </insert>
 
 <select id="loginById"  resultType="trainerVO"   parameterType="trainerVO" >
	<![CDATA[
		select * from TRAINER	
		where MGR_ID=#{mgr_id} and MGR_PW=#{mgr_pw}		
	]]>
  </select>
